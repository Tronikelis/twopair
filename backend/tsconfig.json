{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "paths": {
            "~/*": ["./src/*"]
        }
    },

    "exclude": ["node_modules", "dist"]
}
