{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react",
        "esModuleInterop": true,
        "noEmit": true,
        "skipLibCheck": true,

        "paths": {
            "~/popup/*": ["./popup/src/*"],
            "~/*": ["./*"]
        }
    },

    "exclude": ["node_modules", "dist"]
}
