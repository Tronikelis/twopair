{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "name": "Watch Anything Together",
    "version": "0.1.0",
    "manifest_version": 3,

    "action": {
        "default_title": "Watch Anything Together",
        "default_popup": "./popup/dist/index.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./content_script/dist/index.js"],
            "run_at": "document_idle"
        }
    ],

    "permissions": ["storage"],

    "browser_specific_settings": {
        "gecko": {
            "id": "contactdonatas@gmail.com",
            "strict_min_version": "101.0"
        }
    }
}
