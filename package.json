{
    "name": "watch-anything-together",
    "version": "0.1.0",
    "scripts": {
        "dev": "concurrently \"pnpm backend:dev\" \"pnpm extension:browser:dev\" \"nodemon\" --kill-others",
        "backend:dev": "cd backend && pnpm dev",
        "extension:build:dev": "cd extension && pnpm build:dev",
        "extension:browser:dev": "cd extension && web-ext run --verbose --devtools"
    },
    "dependencies": {
        "nanoid": "4.0.2"
    },
    "devDependencies": {
        "concurrently": "8.2.0",
        "nodemon": "2.0.22",
        "typescript": "5.1.5",
        "web-ext": "7.6.2"
    }
}
